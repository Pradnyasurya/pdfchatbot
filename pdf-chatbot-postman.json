{
  "info": {
    "name": "PDF Chatbot API",
    "description": "Postman collection for testing the PDF Chatbot Spring Boot application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "documentId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Document Management",
      "item": [
        {
          "name": "Upload PDF Document",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/documents/upload",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "documents",
                "upload"
              ]
            }
          }
        },
        {
          "name": "Get Document Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/documents/{{documentId}}/status",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "documents",
                "{{documentId}}",
                "status"
              ]
            }
          }
        },
        {
          "name": "List All Documents",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/documents",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "documents"
              ]
            }
          }
        },
        {
          "name": "Delete Document",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/documents/{{documentId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "documents",
                "{{documentId}}"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Chat",
      "item": [
        {
          "name": "Ask Question About Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"documentId\": \"{{documentId}}\",\n  \"question\": \"What is the main topic of this document?\",\n  \"responseFormat\": \"TEXT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/chat",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "chat"
              ]
            }
          }
        }
      ]
    }
  ]
}